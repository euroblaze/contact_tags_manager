<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="tag2contacts.One2ManySelectable" t-inherit="web.X2ManyField" t-inherit-mode="primary" owl="1">
		<xpath expr="//div[hasclass('o_x2m_control_panel')]" position="before">
			<div>
				<button t-if="hasSelected" class="btn btn-primary oe_highlight" t-on-click="editPartnerTag">
					Edit Tag
				</button>
            	<t t-if="props.readonly">
					<span class="oe_form_char_content"/>
				</t>
			</div>
		</xpath>
    </t>
</templates>
